<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Board</title>
    <script src="ejs.js"></script>
</head>
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        /* overflow-y: hidden; */
        background-color: rgb(9, 95, 112);
    }

    #text_title {
        margin-top: 20px;
        color: white;
        text-align: center;
        font-size: 50px;
    }

    input {
        padding: 20px 30px;
        border: none;
        background-color: rgb(6, 48, 61);
        border-radius: 20px;
    }

    #form {
        text-align: center;
        max-width: 600px;
        /* padding: 90px; */
        /* background-color: rgb(38, 119, 125); */
        margin-left: 600px;
    }

    #user_name {
        color: white;
        font-size: 30px;

    }

    .text_user {
        font-size: 30px;
        color: white;
        margin-right: 600px;
        width: 300px;
    }

    #create_data {
        background-color: rgb(6, 48, 61);
        max-width: 700px;
        margin-left: 600px;
        margin-top: 100px;
        color: white;
        padding: 10px;
        border-radius: 10px;
        /* overflow-x: auto; */
    }

    #text_name {
        color: white;
        font-size: 30px;
    }

    textarea {
        padding: 40px 30px;
        background-color: rgb(6, 48, 61);
        border-radius: 20px;
        font-size: 30px;
        color: white;

    }

    

    input[type="text"] {
        font-size: 25px;
        color: white;
    }

    button {
        font-size: 25px;
        background: none;
        border: none;
        border: 2px solid white;
        color: white;
        padding: 10px 20px;
        background-color: rgb(13, 64, 64);
        border-radius: 20px;
    }

    
    #board {
        border: 4px solid white;
        padding: 10px 20px;
        background-color: rgb(6, 48, 61);
    }

    #add {
        font-size: 100px;
        color: white;
        transition: transform 600ms;
    }

    #add:hover {
        transform: scale(2.5);
       
    }
    #create_time{
        font-size: 20px;
       
    }
   
</style>
<script>let data = [""]</script>

<body>
    <h1 id="text_title">Welcome to <b id="board">THE BOARD</b> <span id="add">+</span> </h1>

    <form id="form" method="post" action="/msg">
        <label id="user_name" for="user"><b>Enter the name:</b></label>
        <input type="text" id="user" name="user" />
        <br />
        <br />
        <span id="text_name"><b>Enter the text:</b></span>
        <textarea type="text" id="text" name="text"></textarea>
        <br />
        <br />
        <button id="post"><b>POST</b></button>
    </form>



    <div id="overflow-x" id="create">
    <% if (data) { %>
        <% for(let index=0; index < data.length; index++) { %>
            <div id="create_data">
                <div class="text_user"><b>
                        <%= data[index].user %>
                    </b></div>
                <hr>
                <div class="text_user"><b>
                        <%= data[index].text %>
                    </b></div>
                <hr>
                <div id="create_time">
                    <b>Create Time: </b>
                    <b><% if (data[index].createdAt && typeof data[index].createdAt==='string' ) { %>
                        <%= data[index].createdAt.slice(0, 10) %>
                            <%= data[index].createdAt.slice(11, 19) %>
                                <% } else { %>
                                    <%= data[index].createdAt %>
                                        <% } %></b>
                </div>

            </div>

            </div>
            <% } %>
                <% } %>
            </div>


            <script>
                const post = document.getElementById('post')
        const overflow = document.getElementById('create_data')
       const text_title = document.getElementById('text_title')
        const form = document.getElementById('form');
        const add = document.getElementById('add');
        form.style.display = "none";
        add.addEventListener("click", function () {
            form.style.display = "block"
            text_title.style.display = "none"
            overflow.style.display="none"
        })
        post.addEventListener('click', function(){
            text_title.style.display = "block"
            overflow.style.display="block"
            form.style.display = "none"
        })
       


    </script>
</body>

</html>